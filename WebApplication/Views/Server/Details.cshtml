@model WebApplication.Models.ServerViewModel
@using WebApplication.Areas.Launcher.Models.Json
@if (Model != null)
{
        <h2>Сервер @Model.Name</h2>
        <p>@Model.Description</p>
        <p>@Model.ServerData.ClientVersion</p>
        <p>@(Model.ServerData.IpAddress + ":" + Model.ServerData.Port)</p>
        <p>
            @if (Model.Modifications != null && Model.Modifications.Count() > 0)
            {
                foreach (var mod in Model.Modifications)
                {
                    @mod.Name<br />
                }
            }
            else
            {
                <p>Нет установленных модов</p>
            }
        </p>
        <p>Статус @Enum.GetName(typeof(JsonServerStatus), Model.ServerData.Status)</p>
        <p>Игроков всего @Model.ServerData.MaxPlayerCount</p>
        <p>Сейчас играют @Model.ServerData.PlayerCount</p>
}
else
{
    <h2>Ошибка</h2>
    <p>@ViewBag.Error</p>
}