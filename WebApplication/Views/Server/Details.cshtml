@model WebApplication.Models.ServerViewModel
@{
    ViewBag.Title = "Подробно";
}
@using WebApplication.Areas.Launcher.Models.Json
@if (Model != null)
{
        <h2>Сервер @Model.Name</h2>
        <p>@Html.ServerStatusText(Model.ServerData.Status, Model.ServerData.Message)</p>

        <p>@Model.Description</p>
        <p>@Model.ClientVersion</p>
        <p>@(Model.IpAddress + ":" + Model.Port)</p>
        <p>
            @if (Model.Modifications != null && Model.Modifications.Count() > 0)
            {
                foreach (var mod in Model.Modifications)
                {
                    @mod.Name<br />
                }
            }
            else
            {
                <p>Нет установленных модов</p>
            }
        </p>
        
        if (Model.ServerData.Status == JsonServerStatus.Online)
        {
            <p>Игроков всего @Model.ServerData.MaxPlayerCount</p>
            <p>Сейчас играют @Model.ServerData.PlayerCount</p>
        }

        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        </div>
}
else
{
    <h2>Ошибка</h2>
    <p>@ViewBag.Error</p>
}