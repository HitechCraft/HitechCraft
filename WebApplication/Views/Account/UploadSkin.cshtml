@model WebApplication.Models.UserSkinViewModel
@{
    ViewBag.Title = "UploadSkin";
}

<h2>UploadSkin</h2>

@using (Html.BeginForm("UploadSkin", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить изображение</legend>

        <div class="editor-label">Файл изображения</div>
        <div class="editor-field">
            <input type="file" name="uploadImage" />
        </div>

        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}

<img src="@Url.Action("GetSkinImage", "Account" , new { userName = ViewBag.UserName })"/>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}