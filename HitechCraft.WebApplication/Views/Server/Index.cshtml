@using HitechCraft.Core.Entity.Extentions
@model IEnumerable<HitechCraft.WebApplication.Models.ServerViewModel>
@{
    ViewBag.Title = "Список серверов";
}

<h2 class="page-title">@ViewBag.Title</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var server in Model)
        {
        <div class="col-md-6">
            <div class="panel panel-default server-info-panel">
                <div class="panel-heading">
                    <a href="@Url.Action("Details", "Server", new {id = server.Id})">@server.Name</a>
                </div>
                <div class="panel-body text-center">
                    <img class="server-image" src="data:image/jpeg;base64,@Convert.ToBase64String(server.Image)" alt="" onclick="document.location = '@Url.Action("Details", "Server", new { id = @server.Id })'">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="server-description text-left">
                                @if (server.Description.Length >= 150)
                                {
                                    @server.Description.Limit(150)
                                }
                                else
                                {
                                    @server.Description
                                }<span>... @Html.ActionLink("подробнее", "Details", new { id = server.Id })</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <ul class="server-info text-left">
                                <li><span>Версия: </span>@server.ClientVersion</li>
                                <li><span>Адрес: </span>@(server.Address)</li>
                                <li><span>Статус: </span>@Html.ServerStatusLabel(server.Data.Status, server.Data.Message)</li>

                                <li><span>Игроки: </span>@server.Data.PlayerCount из @server.Data.MaxPlayerCount</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
}
else
{
    <p>Серверов не найдено</p>
}
@if (User.IsInRole("Administrator"))
{
    <div>
        @Html.ActionLink("Создать", "Create", "Server", null, new { @class = "btn btn-success" })
    </div>
}