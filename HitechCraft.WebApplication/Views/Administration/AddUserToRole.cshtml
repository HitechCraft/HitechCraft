@model HitechCraft.WebApplication.Models.UserRoleViewModel
@{
    ViewBag.Title = "Управление ролями пользователей";
}

<h2 class="page-title">@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-6">
        <h3>Добавить пользователю роль</h3>
        @using (Html.BeginForm("AddUserToRole", "Administration", FormMethod.Post))
        {
            @Html.ValidationSummaryStyled(true)

            <div class="form-group">
                @Html.LabelFor(model => model.UserName)
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleId)
                    @Html.DropDownListFor(model => model.RoleId, ViewBag.RoleList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                </div>
                <input type="submit" value="Create" class="btn btn-default" />
        }
    </div>
    <div class="col-md-6">
        <h3>Создать роль</h3>
        <p>
            Созданные роли:
            @if (ViewBag.RoleList != null)
            {
                foreach (var role in ViewBag.RoleList)
                {
                    <span>@role.Text</span>
                }
            }
            else
            {
                <span>Нет</span>
            }
        </p>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Имя роли" />
        </div>

        <div class="form-group">
            <a href="javascript:addRole()">Добавить</a>
        </div>
    </div>
</div>