@model HitechCraft.WebApplication.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
}

<div class="panel panel-primary panel-login">
    <div class="panel-heading">
        @ViewBag.Title
    </div>


    <div class="panel-body">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal loginForm", role = "form", @id = "forgotPass" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="btn-group btn-group-justified">
                    <a class="btn btn-default" onclick="submit()">Сбросить пароль</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script tyoe="text/javascript">
    function submit() {
        $('#forgotPass').submit();
    }
</script>
