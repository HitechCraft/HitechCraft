@model HitechCraft.WebApplication.Models.ModificationViewModel
@{
    ViewBag.Title = "Подробно";
}

@if (Model != null)
{

    <h2>Сервер @Model.Name</h2>
    <p>@Model.Description</p>
    <p>@Model.Version</p>

    if (Model.Image != null && Convert.ToBase64String(Model.Image) != String.Empty)
    {
        <img alt="" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" />
    }
    else
    {
        <img alt="" src="~/Content/Images/no-image.jpg" />
    }
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        </div>
}
else
{
    <h2>Ошибка</h2>
    <p>@ViewBag.Error</p>
}