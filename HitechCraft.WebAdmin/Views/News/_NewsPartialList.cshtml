@using PagedList.Mvc
@model PagedList.IPagedList<HitechCraft.WebAdmin.Models.NewsViewModel>

<table class="table table-bordered">
    <tr>
        <th></th>
        <th>Название</th>
        <th>Текст</th>
        <th>Автор</th>
        <th>Действия</th>
    </tr>
    @foreach (var news in Model)
    {
        <tr>
            <td>
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(news.Image)" class="news-image"/>
            </td>
            <td>@news.Title</td>
            <td>@news.ShortText</td>
            <td>@news.AuthorName</td>
            <td>
                <div class="btn-group">
                    <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Инфо</a></li>
                        <li><a href="#">Комментарии</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }
</table>

@Html.PagedListPager(Model, page => "javascript:FilterNews(" + page + ")")