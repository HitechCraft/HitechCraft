@model HitechCraft.WebAdmin.Models.ShopItemEditViewModel
@{
    ViewBag.Title = "Добавить предмет";
}

<h2 class="page-title">@ViewBag.Title</h2>

@using (Html.BeginForm("CreateItem", "ShopItem", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-create-item" }))
{
    <div class="row">
        <div class="col-md-6">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.GameId) (<a href="#" data-toggle="modal" data-target="#gameIdModal">что это?</a>)
                @Html.EditorFor(model => model.GameId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GameId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ModificationId)
                @Html.DropDownListFor(model => model.ModificationId, ViewBag.Mods as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModificationId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId)
                @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as IEnumerable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input id="create-item" type="button" value="Добавить" class="btn btn-primary" />
                @Html.ActionLink("Отмена", "Index", "ShopItem", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="col-md-6">
            <img alt="" id="shopitem-image" src="~/Content/Images/no-image.jpg" style="max-width: 200px" />

            <div class="form-group image-changer">
                <a href="#" class="btn btn-primary">Выбрать изображение</a>
                <input type="file" name="uploadShopItemImage" id="uploadShopItemImage" />
            </div>
        </div>
    </div>
}

@{
    Html.RenderPartial("_GameIdModal");
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        if ('@ViewBag.Error' !== '') {
            growlError('@ViewBag.Error');
        }
    });

    $('#create-item')
        .on('click',
            function () {
                if ($('#uploadShopItemImage').val() !== '') {
                    $('#form-create-item').submit();
                } else {
                    growlWarning("Необходимо выбрать изображение");
                }
            });

    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#shopitem-image').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#uploadShopItemImage").change(function () {
        readURL(this);
    });
</script>
