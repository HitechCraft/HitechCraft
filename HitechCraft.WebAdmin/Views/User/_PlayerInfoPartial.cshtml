@model HitechCraft.WebAdmin.Models.PlayerInfoViewModel

@{
    Layout = null;
}

@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">
            <p>
                <strong>Никнэйм: </strong>
                @Model.Name
            </p>
            <p>
                <strong>Пол: </strong>
                @Model.Gender
            </p>
            <p>
                <strong>Gonts: </strong>
                <span id="gonts">@Model.Gonts</span>
            </p>
            <p>
                <strong>Рубли: </strong>
                <span id="rubles">@Model.Rubles</span>
            </p>
        </div>
        <div class="col-md-6">
            <div id="skinpreview" class="skinpreview" height="100%" width="100%"></div>
        </div>
    </div>

    <a href="@Url.Action("Edit", new { playerName = Model.Name })" class="btn btn-info">Изменить</a>

    <script type="text/javascript">
        $(document)
            .ready(function() {

                var P0 = new MSP({
                    showcape: true,
                    running: false,
                    spin: false,
                    freezecamera: true,
                    container: "#skinpreview",
                    width: 200,
                    height: 300
                });

                P0.changeSkin('data:image/jpeg;base64,@Html.Action("GetSkinImage", "User", new { gender = Model.Gender, userName = Model.Name })');
            });
    </script>
}
else
{
    <h3>Пользователь не имеет аккаунта игрока</h3>
}